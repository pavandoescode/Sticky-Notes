{
  "manifest_version": 2,
  "name": "Sticky Notes",
  "version": "1.0",
  "description": "Simple sticky notes extension",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/icon.png",
      "48": "/icon.png",
      "128": "/icon.png"
    }
  },
  "icons": {
    "16": "/icon.png",
    "48": "/icon.png",
    "128": "/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
